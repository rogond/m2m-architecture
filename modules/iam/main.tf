}

resource "aws_iam_policy" "apigw_sns_policy" {
  name        = "apigw_publish_sns"
  description = "Allow API Gateway to publish to SNS"

  policy = jsonencode({
    Version = "2012-10-17",
    Statement = [
      {
        Effect = "Allow",
        Action = "sns:Publish",
        Resource = var.sns_topic_arn
      }
    ]
  })
}

resource "aws_iam_role_policy_attachment" "attach_apigw_sns" {
  role       = aws_iam_role.apigw_to_sns.name
